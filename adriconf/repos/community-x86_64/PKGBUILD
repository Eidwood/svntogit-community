# Maintainer: Eidwood <paxxxxis@gmail.com>

pkgname=adriconf
pkgver=2.5.0
pkgrel=1
pkgdesc='GUI tool to configure Mesa drivers by setting options and writing them to the standard drirc file'
arch=('x86_64')
url='https://gitlab.freedesktop.org/mesa/adriconf'
license=('GPL3')
makedepends=("cmake"
             "boost"
             "boost-libs"
             "gtkmm3"
             "libxml++"
             "pciutils"
             "atkmm"
             "pugixml"
             "libx11"
             "libdrm"
             "libpciaccess"
             "intltool"
             "gettext"
             "eglexternalplatform"
             "mesa")
source=("https://gitlab.freedesktop.org/mesa/adriconf/-/archive/v$pkgver/adriconf-v$pkgver.tar.gz")
sha256sums=('SKIP')

prepare() {
        cd "$srcdir/$pkgname-v$pkgver"
        mkdir build-dir
        cd "$srcdir/$pkgname-v$pkgver/build-dir"
        cmake ..
}

build() {
        cd "$srcdir/$pkgname-v$pkgver/build-dir"
        make
}

package() {
        cd "$srcdir/$pkgname-v$pkgver/build-dir"
        sudo make install
}

